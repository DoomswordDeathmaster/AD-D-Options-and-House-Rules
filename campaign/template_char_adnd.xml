<?xml version="1.0" encoding="iso-8859-1"?>
<root>
	<template name="number_charabilityscore2">
		<basicnumber>
			<anchored to="statstitle" position="insidetopleft"/>
			<rollable />
			<readonly />
			<min>1</min>
			<max>25</max>
			<default>9</default>
			<font>bold20</font>
			<frame name="abilityscore_box" />

			<script>
                function onInit()
                    if OptionsManager.getOption("abilityCheckAllow") == "on" then
                        super.onInit();
                        rollable = true;
                    else
                        rollable = false;
                    end
                end
			</script>
			<script file="campaign/scripts/number_abilityscore.lua" />
		</basicnumber>
	</template>

	<template name="label_titlechar">
		<label>
			<font>subwindowsmalltitle</font>
			<center />
			<script>
                function onInit()
                    setVisible(true);
                    if (OptionsManager.getOption("use2eKits") == "off") or (User.getRulesetName() == "OSRIC") then
                        setVisible(false);
                    end
                end
			</script>
		</label>
	</template>

	<template name="label_titlechar_visible">
		<label>
			<font>subwindowsmalltitle</font>
			<center />
			<script>
                function onInit()
                    setVisible(false);
                    if (OptionsManager.getOption("use2eKits") == "off") or (User.getRulesetName() == "OSRIC") then
                        setVisible(true);
                    end
                end
			</script>
		</label>
	</template>

	<template name="number_honor">
		<basicnumber>
			<anchored to="statstitle" position="insidetopleft"/>
			<readonly />
			<min>1</min>
			<max>100</max>
			<default>9</default>
			<font>bold20</font>
			<frame name="abilityscore_box" />
		</basicnumber>
	</template>

	<template name="honor_number_base">
		<basicnumber>
			<anchored width="30" height="20">
				<top  />
				<left anchor="right" relation="relative" offset="10" />
			</anchored>
			<frame name="fielddark" offset="7,5,7,5" />
			<stateframe>
				<hover name="rowshade" offset="7,5,7,5" />
			</stateframe>
			<cursor hover="hand" />
			<font>bold12</font>
			<default>10</default>
			<hideonvalue>0</hideonvalue>
			<min>0</min>
			<max>100</max>
		</basicnumber>
	</template>

	<template name="number_input_abilityfield">
      <number>
        <frame name="abilityscore_box" offset="3,3,3,3" />
        <anchored position="right" offset="0,0" width="40" height="25"/>
           <center />
        <font>regular11</font>
      </number>
  </template>
</root>